{% extends 'base.html.twig' %}

{% block title %}Hello RecipListController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="font-bold underline">{{ recip.name}}</h1>
    <div>
        <ul class="flex divide-x-2 divide-cuisse-dark border-b-2 border-cuisse-dark justify-center">
            <li class="px-2">temps de préparation : {{ recip.makeTime | format_datetime('none', 'short', locale='fr')}}</li>
            <li class="px-2 hidden sm:inline">nb d'ingredient : {{ recip.ingredient | length }}</li>
            <li class="px-2">id : {{ recip.id }}</li>
        </ul>
    </div>
    <div class="rounded-lg bg-cuisse-sky shadow-xl py-2 px-4 my-4">
        <ul class="list-disc list-inside">
            {% for ingredient in recip.ingredient %}
            <li class="">
                <span class="px-2 ">{{ ingredient.name }} : </span>
                <span class="px-2 ">{{ ingredient.quantity }} {{ ingredient.unity }}</span>
            </li>    
            {% endfor %}
        </ul>     
    </div>
    <div class="rounded-lg bg-cuisse-sky shadow-xl py-2 px-4">
        <h3 class="font-semibold">étape : </h3>
        <ul class="list-inside list-decimal ml-4">
            {% for step in recip.step %}
            <li class="bg-cuisse-dark my-2 text-cuisse-beau px-2 rounded shadow">
                <span class="">{{ step }}</span>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}