{% extends 'base.html.twig' %}

{% block title %}Hello RecipListController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="font-bold">Liste des recette disponible</h1>
    <table class="table-auto border border-cuisse-dark">
        <thead>
            <tr class="bg-cuisse-sky">
                <th class="border border-cuisse-dark text-center px-4 hidden sm:table-cell">id</th>
                <th class="border border-cuisse-dark text-center px-4">nom</th>
                <th class="border border-cuisse-dark text-center px-4">temp de préparation</th>
                <th class="border border-cuisse-dark text-center px-4 hidden sm:table-cell">nombre d'ingrédient</th>
                <th class="border border-cuisse-dark text-center px-4"></th>
            </tr>
        </thead>
        <tbody>
            {% for recip in list %}
                <tr>
                    <td class="border border-cuisse-dark text-center px-4 hidden sm:table-cell">{{ recip.id }}</td>
                    <td class="border border-cuisse-dark text-center px-4">{{ recip.name }}</td>
                    <td class="border border-cuisse-dark text-center px-4">{{ recip.makeTime | format_datetime('none', 'short', locale='fr')}}</td>
                    <td class="border border-cuisse-dark text-center px-4 hidden sm:table-cell">{{ recip.ingredient | length }}</td>
                    <td class="border border-cuisse-dark text-center px-0 sm:px-4"><a href="{{ path('recip',{'slug' : recip.name | url_encode}) }}" class="bg-cuisse-paleCerulean rounded-lg px-2">voir +</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
